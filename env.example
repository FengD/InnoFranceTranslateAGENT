# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/translation_agent.log
WEB_LOG_FILE=logs/web_app.log

# Metrics
PROMETHEUS_PORT=8001
ENABLE_METRICS=true

# Input limits
INPUT_MAX_TOKENS=3000
TOKEN_CHAR_RATIO=4

# OpenAI
OPENAI_API_KEY=your_openai_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Ollama
OLLAMA_API_BASE=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Qwen (DashScope)
DASHSCOPE_API_KEY=your_dashscope_key
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen2.5-72b-instruct

# GLM (ZhipuAI)
ZHIPUAI_API_KEY=your_zhipuai_key
GLM_API_BASE=https://open.bigmodel.cn/api/paas/v4
GLM_MODEL=glm-4

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_key
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# SGLang
SGLANG_API_KEY=your_sglang_key
SGLANG_API_BASE=http://localhost:30000/v1
SGLANG_MODEL=your_sglang_model

# vLLM
VLLM_API_KEY=your_vllm_key
VLLM_API_BASE=http://localhost:8000/v1
VLLM_MODEL=your_vllm_model
